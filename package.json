  "license": "Apache-2.0",
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.7",
    "@types/mocha": "^5.2.4",
    "@types/node": "^10.5.2",
    "@types/sinon": "^7.0.0",
    "codecov": "^3.0.4",
    "gts": "^0.9.0",
    "hard-rejection": "^1.0.0",
    "intelli-espower-loader": "^1.0.1",
    "mocha": "^5.2.0",
    "nyc": "^13.0.0",
    "sinon": "^7.0.0",
    "source-map-support": "^0.5.6",
    "typescript": "^3.0.0",
    "broken-link-checker-local": "^0.2.0"
  }
